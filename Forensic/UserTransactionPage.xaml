<Window x:Class="Forensic.UserTransactionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forensic"
        mc:Ignorable="d"
        Title="Transaction Page for Users" Height="150" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF003972" Offset="0"/>
                <GradientStop Color="#FFB2D9FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnRegisterDevice" Content="Register a Device" HorizontalAlignment="Left" Height="26" Margin="50,50,0,0" VerticalAlignment="Top" Width="120" Click="btnRegisterDevice_Click" TabIndex="1"/>
        <Button x:Name="btnUpdateLocation" Content="Update Location" HorizontalAlignment="Left" Height="26" Margin="230,50,0,0" VerticalAlignment="Top" Width="123" Click="btnUpdateLocation_Click" TabIndex="2"/>
    </Grid>
</Window>
